<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="5dp">

    <com.pkmmte.view.CircularImageView
        android:id="@+id/img_user_pic"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:padding="5dp"
        app:border="true"
        app:border_color="@color/circular_image_border_color"
        app:border_width="1dp"
        app:shadow="true" />

    <com.tanzil.sportspal.customUi.MyTextView
        android:id="@+id/txt_user_name"
        android:layout_width="0dp"
        android:layout_height="@dimen/drop_down_height"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/sports_name"
        android:textColor="@color/edit_text_color"
        android:textColorHint="@color/hint_color"
        android:textSize="@dimen/small_text_size" />

    <ImageView
        android:id="@+id/img_sport_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:contentDescription="@string/app_name"
        android:padding="5dp"
        android:src="@drawable/team" />


    <!--<View-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="1dp"-->
    <!--android:background="@color/white" />-->

</LinearLayout>
