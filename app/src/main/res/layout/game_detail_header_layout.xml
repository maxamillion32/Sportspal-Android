<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_sports_pic"
        android:layout_width="match_parent"
        android:layout_height="@dimen/row_height"
        android:layout_gravity="center_horizontal|center_vertical"
        android:contentDescription="@string/app_name" />

    <com.tanzil.sportspal.customUi.MyTextView
        android:id="@+id/sport_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/news"
        android:textColor="@color/white"
        android:textSize="@dimen/large_text_size"
        android:padding="10dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="5dp"
        android:background="@android:color/transparent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="2">

        <com.tanzil.sportspal.customUi.MyTextView
            android:id="@+id/txt_team_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/sports"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/sports"
            android:gravity="bottom"
            android:padding="10dp"
            android:text="@string/news"
            android:textColor="@color/white"
            android:textSize="@dimen/small_text_size" />

        <com.tanzil.sportspal.customUi.MyTextView
            android:id="@+id/txt_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/date"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/date"
            android:gravity="bottom"
            android:padding="10dp"
            android:text="@string/news"
            android:textColor="@color/white"
            android:textSize="@dimen/small_text_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="15dp"
        android:background="@android:color/transparent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="2">

        <com.tanzil.sportspal.customUi.MyTextView
            android:id="@+id/txt_pick_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/pin"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/pin"
            android:gravity="bottom"
            android:padding="10dp"
            android:text="@string/news"
            android:textColor="@color/white"
            android:textSize="@dimen/small_text_size" />

        <com.tanzil.sportspal.customUi.MyTextView
            android:id="@+id/txt_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/time"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/time"
            android:gravity="bottom"
            android:padding="10dp"
            android:text="@string/news"
            android:textColor="@color/white"
            android:textSize="@dimen/small_text_size" />
    </LinearLayout>

    <com.tanzil.sportspal.customUi.MyButton
        android:id="@+id/join_btn"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_height"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:background="@drawable/button_green_bg"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="@string/join_game"
        android:textColor="@color/bg"
        android:textStyle="normal"
        android:textSize="@dimen/medium_large_text_size" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@android:color/transparent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.tanzil.sportspal.customUi.MyTextView
            android:id="@+id/txt_members"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/team"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/team"
            android:gravity="bottom"
            android:padding="10dp"
            android:text="@string/news"
            android:textColor="@color/white"
            android:textSize="@dimen/small_text_size" />

        <com.tanzil.sportspal.customUi.MyTextView
            android:id="@+id/txt_member_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:drawablePadding="5dp"
            android:gravity="end"
            android:padding="10dp"
            android:text="@string/news"
            android:textColor="@color/white"
            android:textSize="@dimen/small_text_size" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>

</LinearLayout>
